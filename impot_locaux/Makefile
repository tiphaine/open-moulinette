ECHO_SUCCESS=@echo " \033[1;32mâœ”\033[0m  "

all: download process

download:
	@rm -rf data
	@mkdir data
	# Download 2013 data
	@curl --output data/rei_2013.zip https://www.impots.gouv.fr/portail/www2/fichiers/statistiques/base_de_donnees/rei/rei_2013.zip
	@unzip data/rei_2013.zip -d data/
	# Download 2014 data
	@curl --output data/rei_2014.zip https://www.impots.gouv.fr/portail/www2/fichiers/statistiques/base_de_donnees/rei/rei_2014.zip
	@unzip data/rei_2014.zip -d data/
	# Download 2015 data
	@curl --output data/rei_2015.zip https://www.impots.gouv.fr/portail/www2/fichiers/statistiques/base_de_donnees/rei/rei_2015.zip
	@unzip data/rei_2015.zip -d data/
	# Download 2015 data
	@curl --output data/rei_2016.zip https://www.impots.gouv.fr/portail/www2/fichiers/statistiques/base_de_donnees/rei/rei_2016.zip
	@unzip data/rei_2016.zip -d data/
	
process:
	python mk_data.py